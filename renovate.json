{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "America/New_York",
  "schedule": ["before 10pm"],
  "automerge": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "ignoreTests": true,
  "tekton": {
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "pinDigests": true
  }
}
